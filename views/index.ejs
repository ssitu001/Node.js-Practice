<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelp Camp</h1>
      <p>View our hand-picked campgrounds from the all over the world!</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add campground!</a>
      </p>
    </div>
  </header>

  <div class="row" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(camp){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= camp.image %>">
          <div class="caption text-center">
            <h4><%= camp.name %></h4>
            <p>
              <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>      
        </div>
      </div>
    <% })%>   
  </div>    
</div>

<% include partials/footer %>